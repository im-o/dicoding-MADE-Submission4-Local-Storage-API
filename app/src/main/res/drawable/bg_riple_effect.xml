<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorAccent">
    <item android:id="@+id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTransparantBlackLowVery" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:id="@+id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/colorTransparant"
                android:endColor="@color/colorTransparantBlackLowVery"
                android:centerColor="@color/colorTransparant"
                android:type="linear"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>

</ripple>